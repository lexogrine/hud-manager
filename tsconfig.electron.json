{
    "compilerOptions": {
      "noFallthroughCasesInSwitch": true,
      "target": "ESNext",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "outDir": "./dist",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
    },
    "exclude": [
      ".git",
      ".app-cache",
      ".npm",
      ".npm-tmp",
      "dist",
      "dist*",
      "app",
      "src",
      "node_modules",
      "subfolder/dist",
      "subfolder/node_modules",
      "**/dist/*",
      "**/node_modules/*"
    ]
  }
  